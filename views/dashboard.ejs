<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>gods eye</title>
    <link rel="icon" href="/uploads/vavicon 2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/url.css">
</head>

<body>

    <div class="container">
        <!-- sidebar -->
        <%- include ('partials/sidebar.ejs') %>



            <!-- Main content -->
            <main class="main-content">
                <header class="header hide">
                    <div class="profile-summary">
                        <img src="/uploads/profile.jpeg" alt="Profile" class="profile-pic">
                        <div>
                            <h2>
                                <%= user.username %>
                            </h2>
                            <p>
                                <%= user.email %>
                            </p>
                        </div>
                    </div>
                </header>



                <!-- OVER ALL SECTION  -->
                <section class="section-content">

                    <section class="free-offers free">
                        <div class="drop">
                            <h1>FREE OFFERS</h1>
                            <i class="ri-arrow-down-s-line"></i>
                        </div>
                        <div class="content">
                            <%- include ('partials/free-offers.ejs') %>
                        </div>
                    </section>


                    <section class="premium-offers">
                        <div class="drop border">
                            <h1>PREMIUM OFFERS</h1>
                            <i class="ri-arrow-down-s-line"></i>
                        </div>
                        <div class="content">
                            <%- include ('partials/premium-offers.ejs') %>
                        </div>
                    </section>

                </section>


                <!-- /* MY FOOTER SECTION  */ -->
                <%- include ('partials/footer.ejs') %>
            </main>


            <!-- DRAGABLE IMAGE -->
            <div class="draggable-image">
                <span class="close-btn"><i class="ri-close-fill"></i></span>
                <a href="http://wa.me/+2348059268860"><img src="/uploads/robot.png" alt="Draggable" /></a>
            </div>



            <!-- WhatsApp Button -->
            <%- include ('partials/whatsapp-btn.ejs') %>

    </div>


    <script src="https://kit.fontawesome.com/b3fa93e021.js" crossorigin="anonymous"></script>
    <script src="/js/dashboard.js"></script>
</body>

</html>